<apex:page standardController="Work_Order__c" extensions="workOrderExtension" >       
 

<apex:form >
    <apex:pageBlock >
        
    <apex:image url="{!$Resource.ABOSLogo}" width="180" height="50"/><br/>
        
        
        <apex:pageBlockSection >            
            <Div styleClass="companyName"> 
                <p>10220 S Dolfield Rd Ste 209c</p>
                <p>Owings Mills, MD 21117</p>
                <p>Phone / Fax 888-421-2247</p>
                <p>www.abis.com</p>
            </Div>
        </apex:pageBlockSection>            
        <apex:pageBlockSection >
            <Div>
                <p>WORK ORDER</p><br/>
                <p><apex:InputText value="{!wkord.Name}"/></p><br/>
                <p><apex:InputText value="{!wkord.Work_Order_Date__c}"/></p><br/>
            </Div>
        </apex:pageBlockSection>
        <apex:pageBlockSection >                
            <Div>
                <p><apex:InputText value="{!wkord.Issued_To__c}"/></p><br/>
                <p><apex:InputText value="{!wkord.Vendor_ID__c}"/></p><br/>
                <p><apex:InputText value="{!wkord.Vendor_Quote__c}"/></p><br/>
                <p><apex:InputText value="{!wkord.ABIS_Authorized_By__r.name}"/></p><br/>
            </Div>        
        </apex:pageBlockSection>
    
       <table style="width:100%">
      <tr>
        <th bgcolor="#3498DB">Work Description</th>
        <th bgcolor="#3498DB">BIll TO</th> 
        <th bgcolor="#3498DB">Ship TO(if different)</th>
      </tr>
      <tr>
        <td>Enter Description of work</td>
        <td><apex:InputText value="{!wkord.Vendor_ID__c}"/></td> 
        <td><apex:InputText value="{!wkord.Ship_To__r.name}"/></td>
      </tr>
      <tr>
        <td>  </td>
        <td><apex:Inputfield value="{!wkord.Vendor_ID__c}"/></td> 
        <td><apex:Inputfield value="{!wkord.Ship_To__c}"/></td>
      </tr>
    </table>
    
     <table style="width:100%">
      <tr>
        <th bgcolor="#3498DB">Additional Comments</th>
       
      </tr>
      <tr>
        <td>Free text here</td>
        
      </tr>
      
    </table>
     
      <table style="width:100%">
      <tr>
            <th bgcolor="#3498DB">QTY</th>
            <th bgcolor="#3498DB">Description</th> 
            <th bgcolor="#3498DB">Taxed</th>
            <th bgcolor="#3498DB">UNIT Price</th> 
            <th bgcolor="#3498DB">Line Total</th>
      </tr>
      <tr>
        <td >15</td>
        <td>Part XyZ</td> 
        <td>X</td>
        <td>150</td> 
        <td>2,250</td>
      </tr>
      
    </table>
            
            <apex:pageBlockButtons >
            <apex:commandButton action="{!Save}" value="Save"/>
            <apex:commandButton action="{!printPdfWorkOrder}" value="Print PDF"/>
            <apex:commandButton action="{!sendPdfWorkOrder}" value="Send PDF"/>    
            </apex:pageBlockButtons>
        
            <apex:pageBlockSection >
                <apex:pageBlockSectionItem >
                 <apex:outputLabel value="Email to send to" for="email"/>
                  <apex:inputText value="{!email}" id="email" />
                </apex:pageBlockSectionItem>
                    
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="WorkOrder" for="Work_Order__c"/>
                    <apex:selectList value="{!workOrderId}" id="Work_Order__c" size="1">
                        <apex:selectOptions value="{!workOrders}"/>
                    </apex:selectList>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
    
    </apex:pageBlock>
</apex:form>

</apex:page>